<body>
  <h1>My Music Player</h1>
  <div class="player">
    <h3 id="currentSong">Now Playing: Select a Song</h3>
    <audio id="audioPlayer" controls>
      <source src="" type="audio/mp3">
      Your browser does not support the audio element.
    </audio>
    <br><br>
    <button onclick="playSong('song.mp3')">Play Song</button>
    <button onclick="playSong('track.mp3')">Play Track</button>
  </div>

  <script>
    function playSong(filename) {
      const audioPlayer = document.getElementById("audioPlayer");
      const currentSong = document.getElementById("currentSong");
      audioPlayer.src = "music/" + filename;
      currentSong.textContent = "Now Playing: " + filename;
      audioPlayer.play();
    }
  </script>
</body>
